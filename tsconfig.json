{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,                     
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".", 
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "paths": {
            "*": ["node_modules/*"]
        }
    }
}